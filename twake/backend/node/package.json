{
  "name": "@twake/twake-backend",
  "version": "1.0.0",
  "description": "Twake backend",
  "scripts": {
    "build": "npm run build:clean && npm run build:ts && npm run build:copy-assets",
    "build:ts": "tsc",
    "build:clean": "rimraf ./dist",
    "build:copy-assets": "npm run build:copy-config",
    "build:copy-config": "cp -R config dist",
    "dev": "tsc-watch --project . --outDir ./dist --onSuccess \"nodemon ./dist/server.js\"",
    "lint": "eslint . --ext .ts --quiet --fix",
    "lint:no-fix": "eslint . --ext .ts",
    "serve": "node dist/server.js",
    "serve:watch": "nodemon dist/server.js",
    "serve:debug": "nodemon --inspect dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "test:watch": "npm run test -- --watchAll",
    "test:e2e": "jest test/e2e --forceExit --coverage --verbose --detectOpenHandles",
    "test:unit": "jest test/unit --forceExit --coverage --verbose --detectOpenHandles",
    "test:unit:watch": "npm run test-unit -- --watchAll",
    "kill": "kill $(lsof -t -i:3000) | exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TwakeApp/twake-backend.git"
  },
  "author": "Twake",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TwakeApp/twake-backend/issues"
  },
  "homepage": "https://github.com/TwakeApp/twake-backend#readme",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/chai": "^4.2.12",
    "@types/config": "0.0.36",
    "@types/eslint": "^7.2.3",
    "@types/jest": "^26.0.14",
    "@types/mongodb": "^3.5.31",
    "@types/node": "^14.11.2",
    "@types/pino": "^6.3.2",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.34",
    "@types/socket.io-redis": "^1.0.26",
    "@types/supertest": "2.0.4",
    "@types/ws": "^7.2.7",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-jest": "^26.5.2",
    "chai": "^4.2.0",
    "eslint": "^7.10.0",
    "jest": "^26.4.2",
    "nodemon": "2.0.4",
    "rimraf": "^3.0.2",
    "socket.io-client": "^2.3.1",
    "supertest": "4.0.2",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "cassandra-driver": "^4.6.0",
    "config": "^3.3.2",
    "fastify": "3.4.1",
    "fastify-cors": "^4.1.0",
    "fastify-jwt": "^2.1.3",
    "fastify-plugin": "^2.3.4",
    "fastify-sensible": "^3.0.1",
    "fastify-websocket": "^2.0.7",
    "mongodb": "^3.6.2",
    "pino": "^6.6.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "socket.io": "^2.3.0",
    "socket.io-redis": "^5.4.0",
    "socketio-jwt": "^4.6.2",
    "typeorm": "^0.2.28"
  }
}
